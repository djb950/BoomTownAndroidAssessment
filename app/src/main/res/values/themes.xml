<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BoomTownStarWars" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/new_hope_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/background_light_theme</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/new_hope_blue</item>
        <item name="colorSecondaryVariant">@color/new_hope_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/new_hope_blue</item>
        <!-- Recycler View Row Colors -->
        <item name="recyclerViewRowBackgroundColor">@color/background_light_theme</item>
        <item name="recyclerViewTextColor">@color/black</item>
        <!-- Progress Bar Colors -->
        <item name="progressBarColor">@color/new_hope_blue</item>
    </style>
</resources>